{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "IpRateLimiting": {
        "EnableEndpointRateLimiting": false,
        "StackBlockedRequests": false,
        "RealIpHeader": "X-Real-IP",
        "ClientIdHeader": "X-ClientId",
        "HttpStatusCode": 429,
        "IpWhitelist": [
            "127.0.0.1",
            "::1/10",
            "192.168.0.0/24"
        ],
        "GeneralRules": [
            {
                "Endpoint": "*",
                "Period": "5s",
                "Limit": 2
            },
            {
                "Endpoint": "faq/search",
                "Period": "10s",
                "Limit": 3
            }
        ]
    }
}
